{
  "name": "@jeroenpeeters/tslox",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "description": "Typescript implementation of JLox, the language from Crafting Interpreters",
  "repository": "jeroenptrs/tslox",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "typescript"
  ],
  "author": {
    "name": "Jeroen Peeters",
    "email": "contact@jeroenpeeters.be"
  },
  "license": "MIT",
  "hooks": {
    "pre-commit": "pretty-quick --staged"
  },
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "generate": "npx ts-node --esm src/generateAst.ts src",
    "start": "yarn build && node dist/index.esm.js",
    "test": "jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "effect": "^2.0.0-next.22",
    "tslib": "^2.6.1",
    "type-fest": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@jeroenpeeters/tsconfig": "^1.0.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.6.2",
    "js-tokens": "^8.0.1",
    "prettier": "^3.0.0",
    "pretty-quick": "^3.1.3",
    "rollup": "^3.27.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "verbose": true,
    "rootDir": "./src",
    "preset": "ts-jest",
    "collectCoverage": true,
    "coverageDirectory": "../coverage"
  }
}